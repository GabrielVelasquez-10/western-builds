---
import Logo from './Logo.astro'

import IconInstagram from '../assets/svg/icons/instagram-brands.svg'
import IconLinkedin from '../assets/svg/icons/linkedin-in-brands.svg'
import IconWhatsapp from '../assets/svg/icons/whatsapp-brands.svg'
import IconX from '../assets/svg/icons/x-twitter-brands.svg'
import IconFacebook from '../assets/svg/icons/facebook-brands.svg'
---

<footer>
    <div class="footer-logoWrapper">
        <Logo fill="#ffffff"/>
    </div>
    <div class="footer-socialmedia">
        <div class="footer-text-wrapper">
            <a href="mailto:contacto@westernbuilds.cl">contacto@westernbuilds.cl</a>
            <a href="tel:+56931160698">+(56) 9 3116 0698</a>
        </div>
        <div class="footer-icon-wrapper">
            <a target="_blank" href="https://www.instagram.com/westernbuilds?igsh=MTFzMzQ3bmt5NmNkcA=="><IconInstagram class="footer-icon"/></a>
            <a target="_blank" href="http://"><IconLinkedin class="footer-icon"/></a>
            <a target="_blank" href="https://w.app/westernbuilds"><IconWhatsapp class="footer-icon"/></a>
            <a target="_blank" href="https://x.com/westernbuilds"><IconX class="footer-icon"/></a>
            <a target="_blank" href="http://"><IconFacebook class="footer-icon"/></a>
        </div>
    </div>
</footer>

<style>
    * {
        box-sizing: border-box;
    }
    footer {
        background: #22215F;
        
        width: 100%;
        height: auto;
        min-height: 10rem;
        padding: 0 3rem;

        /* position: relative; */
        /* z-index: 3; */

        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .footer-logoWrapper {
        width: 18rem;
    }

    .footer-socialmedia {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }
    .footer-text-wrapper {
        display: flex;
        height: 100%;
        flex-direction: column;
        justify-content: center;
        flex-wrap: wrap;
    }
    .footer-icon-wrapper {
        display: flex;
        margin-left: 1.3rem;
    }

    .footer-socialmedia .footer-icon-wrapper a {
        width: 2rem;
        height: 2rem;
        padding: .2rem;
        user-select: none;
    }
    .footer-socialmedia .footer-text-wrapper a {
        color: #ffffff80;
        transition: color ease .3s;
    }

    .footer-socialmedia .footer-text-wrapper a:hover {
        color: azure;
    }

    .footer-icon {
        width: 100%;
        height: 100%;
        color: white;
        user-select: none;
        transition: all ease .2s;
    }.footer-icon:hover {
        width: 110%;
    }

    @media only screen and (max-width: 680px) {
        footer {
            justify-content: center;
            padding: 1.9rem 0;
        }
        .footer-socialmedia {
            justify-content: center;
            gap: 1rem;
            margin-top: .4rem;
        }

        .footer-text-wrapper {
            text-align: center;
            font-size: 1.03rem;
        }

        .footer-icon-wrapper {
            margin: 0;
            width: auto;
            gap: .7rem;
        }
        .footer-socialmedia .footer-icon-wrapper a {
            width: 2.3rem;
            height: auto;
        }
    }

</style>