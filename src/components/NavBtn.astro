---
const {content} = Astro.props
const {noStyle} = Astro.props
---

<script>

  const elementWord = document.querySelectorAll(".btn");
  console.log(elementWord)
  
  elementWord.forEach(item => {
    let lengthWord = item.textContent.length;
    let styleFlag = item.getAttribute('noStyle');
    if (styleFlag && item) item.style.width = `${lengthWord * 4}px`;
  });

</script>

<button class="btn" id="btn" noStyle={false}>
  <span class="btn-text-one">{content}</span>
  <span class="btn-text-two">{content}</span>
</button>

<style>
.btn {
  width: 5rem;
  height: 1.2rem;
  color: #fff;
  background: none;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}.btn:hover {
  cursor: pointer;
}

.btn span {
  font-size: .8rem;
  font-family: "Poppins";
  font-weight: 700;
  text-transform: uppercase;
  transition: top 0.3s;
}

.btn-text-one {
  position: absolute;
  width: 100%;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.btn-text-two {
  position: absolute;
  width: 100%;
  top: 150%;
  left: 0;
  transform: translateY(-50%);
}

.btn:hover .btn-text-one {
  top: -100%;
}

.btn:hover .btn-text-two {
  top: 50%;
}
</style>
