</Layout>

<style>
	* {
		box-sizing: border-box;
	}
	
/* #region Hero section */
.hero {
	width: 100%;
	height: 100vh;
	min-height: 700px;

	background-image: url(../../public/images/image.webp);
	background-size: auto 100%;
	background-repeat: no-repeat;
	background-position-x: right;
	display: flex;
}

.hero-text-container {
	width: 100%;
    background-color: #FFFFFF;
	padding-left: 5rem;
	padding-bottom: 5rem;
	display: flex;
	align-items: center;
	
	

    clip-path: polygon(0 0, 90% 0, 0 200%); /* Forma irregular */
}
	.hero-flexWrapper {
		flex-grow: 0;
		flex-shrink: 1;
	}

	.hero-titleWrapper {
		width: 65%;
		/* border: solid; */
		margin-top: 1rem;
	}
		.hero-titleWrapper h1 {
			font-size: clamp(2rem, 4vw, 5vw);
			text-transform: uppercase;
			margin: 0;
		}

	.hero-servicesWrapper {
		width: 65%;
		height: min-content;
		/* border: solid; */
		margin-top: .2rem;
	}
		.hero-servicesWrapper h3 {
			font-size: clamp(1.1rem, 1.85vw, 3vw);
			text-transform: uppercase;
			color: #22215F;
			margin: 0;
		}
	.hero-contentWrapper {
		margin-top: clamp(1rem, 2rem, 3rem );
		margin-bottom: 2rem;
		display: flex;
	}
		.hero-sloganWrapper {
			width: 30%;
			margin-right: 1rem;
		}
			.hero-sloganWrapper p {
				text-transform: uppercase;
				font-weight: bold;	

				font-size: clamp(1rem, 1.3vw, 2vw);
				margin: 0;
			}
		.hero-questionWrapper {
			width: 30%;
			/* border: solid; */
		}
			.hero-questionWrapper span {
				font-size: clamp(1.4rem, 1.9vw, 3vw);
				text-transform: uppercase;
				font-weight: bolder;
				margin: 0;
			}

/* #endregion */

/* #region Services section*/
.services {
    width: 100%;
    height: auto;
    padding: 0rem 3rem;
    background: #ffffff;
    position: relative;
    z-index: 3;
}

  .services > h2 {
    font-size: 2rem;
    text-transform: uppercase;
  }

  .services-boxWrapper {
	width: 100%;
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	grid-template-rows: repeat(2, 1fr);
	gap: 1rem;
  }

  .services-service {
    color:rgb(0, 0, 0);
    width: 100%;


    padding: 1.5rem;
    background: #ffffff;
    border: solid 3px #0000001e;

    display: flex;
    justify-content: space-between;
    flex-direction: column;
    flex-wrap: wrap;

  }

  .service-upperWrapper {
	display: flex;
	justify-content: space-between;
	align-items: center;
  }

  .services h3 {
    text-transform: uppercase;
    font-size: 150%;
    margin-bottom: 1.5rem;
  }
  .services p {
    text-transform: capitalize;
    font-size: .77rem;
	font-weight: 600;
  }
  .services-service span {
	width: 2.3rem;
	height: 2.3rem;
	margin-left: 1rem;
  }

  .services-boxWrapper .service-remodeling {
    grid-column: 2 / -1;
  }
  .services-boxWrapper .service-design {
    grid-column: 1 / 2;
  }
  .services-boxWrapper .service-installation {
    grid-column: 3 / -1;
  }
  .services-boxWrapper .service-construction {
    grid-column: 1 / 3;
  }

/* #endregion */

/* #region About Us section*/
.aboutus {
    width: 100%;
    height: auto;
    position: relative;
    z-index: 3;
    background-image: url('../../public/images/Las_Galias-22 1.jpg');
    padding: 2.3rem 3rem;
	margin-top: 3.5rem;

    display: flex;
    justify-content: end;
    flex-wrap: wrap;
  }
  .aboutus article {
    width: 40%;
    height: auto;
    background: white;
    padding: 2rem 1.4rem;
  }
  .aboutus article h2 {
    font-size: 1.8rem;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
  }
  .aboutus article p {
    color: #7a7a7a;
	font-weight: 500;
  }

.aboutus article .wrapper {
  width: 100%;

  display: flex;
  flex-wrap: wrap;
  gap: .8rem;
  margin-top: 10%;
}

.aboutus article .wrapper div {
  border: solid #0000001e;
  height: 8rem;
  padding: 1rem 0;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  flex-grow: 1;
}
.aboutus article .wrapper div span.big {
  font-size: 1.8rem;
  font-weight: 900;
  margin: 0;
  padding: 0;
}

.aboutus article .wrapper .exp span.big {
  font-size: 2.5rem;
}

.aboutus article .wrapper div span.text {
  color: #7a7a7a;
  font-size: auto;
}

/* #endregion */

/* #region Contact section */

.contact {
    position: relative;
    z-index: 3;

    min-height: 20rem; 
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .contact h3 {
    font-size: 2rem;
    text-transform: uppercase;
	margin: 0;
  }
  .contact p {
    color: #7a7a7a;
    margin-bottom: 1rem;
	font-size: 1.2rem;
  }


/* #endregion */


/* #region Responsive Desing */

  	@media only screen and (max-width: 1200px) {
		.aboutus article {
			width: 50%;
		}
	}

	@media only screen and (max-width: 900px) {
		.aboutus article {
			width: 70%;
		}
	}

  	@media only screen and (max-width: 760px) {
		
	/* #region Responsive Hero section */

		.hero {
			width: 100%;
			height: 100vh;
			padding: 0;

			background-repeat: no-repeat;
			background-position-x: right;
			display: flex;
			justify-content: center;

		}

		.hero-text-container {
			width: 100%;

			background-image: url(../../public/images/image.webp);
			backdrop-filter: blur(100px);
			background-size: auto 140%;
			background-repeat: no-repeat;
			background-position-x: right;
			background-position-y: 50%;

			padding: 0 1rem;
			
			display: flex;
			align-items: center;
			clip-path: none; /* Forma irregular */
			box-sizing: border-box;
		}
		 
		.hero-flexWrapper {
			height: 85%;
			/* padding-top: 2rem; */
			
			flex-grow: 0;
			flex-shrink: 1;
			display: grid;
			grid-template-rows: repeat(2, 3fr) repeat(5, 1fr);
			grid-row: 3 / 4;

			justify-content: center;
		}

		.hero-titleWrapper {
			width: 100%;
			margin-top: 1rem;
			grid-row: 3 / 4;
			margin-bottom: 1.3rem;
		}
			.hero-titleWrapper h1 {
				font-size: clamp(1.6rem, 6.2vw, 7vw);
				text-align: center;
				text-transform: uppercase;
				margin: 0;
				color: #FFFFFF;
			}

		.hero-servicesWrapper {
			width: 100%;
			height: min-content;
			margin-top: .2rem;
			margin-bottom: 1rem;
			grid-row: 4 / 5;
		}
			.hero-servicesWrapper h3 {
				font-size: clamp(1.1rem, 3vw, 4vw);
				text-transform: uppercase;
				text-align: center;
				color: #ffffffb4;
				margin: 0;
			}
		.hero-contentWrapper {
			margin-top: clamp(1rem, 2rem, 3rem );
			margin-bottom: 2rem;
			display: flex;
			justify-content: center;

			grid-row: 1 / 2;
		}
			.hero-sloganWrapper {
